<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/space_8"
    android:background="@color/white"
    android:elevation="@dimen/space_2"
    app:cardCornerRadius="@dimen/space_4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingLeft="@dimen/space_12"
            android:paddingRight="@dimen/space_12"
            android:paddingTop="@dimen/space_8"
            android:paddingBottom="@dimen/space_8"
            android:background="@drawable/header">
            <TextView
                android:id="@+id/title"
                android:layout_weight="0.4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KEYNOTE #1"
                android:textSize="@dimen/space_20"
                android:textStyle="bold"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/time"
                android:layout_weight="0.6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10:00 AM - 12:00 PM"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingBottom="@dimen/space_8"
                android:gravity="end" />
        </LinearLayout>
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOW TO BUILD A BUSINESS FROM GROUND UP"
            android:textSize="@dimen/space_16"
            android:paddingLeft="@dimen/space_12"
            android:paddingRight="@dimen/space_12"
            android:paddingTop="@dimen/space_8"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/speaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DR. SUPER THAROOR"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:paddingLeft="@dimen/space_12" />
        <TextView
            android:id="@+id/venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Campus 6 Auditorium"
            android:textSize="@dimen/space_16"
            android:textColor="@color/title"
            android:drawableLeft="@drawable/ic_venue"
            android:paddingLeft="@dimen/space_12"
            android:paddingRight="@dimen/space_12"
            android:paddingTop="@dimen/space_8"
            android:paddingBottom="@dimen/space_8"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
