<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="Technology"
            android:text="Technology\nTrack"
            android:textSize="@dimen/space_20"
            android:textColor="@color/technology"
            android:textStyle="bold"
            android:background="@drawable/track_technology"
            tools:ignore="OnClick"
            android:gravity="bottom|end"
            android:padding="@dimen/space_24"/>
        <Button
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="Startup"
            android:text="Start-up\nPlanet"
            android:textSize="@dimen/space_20"
            android:textColor="@color/startupplanet"
            android:textStyle="bold"
            android:background="@drawable/track_startupplannet"
            tools:ignore="OnClick"
            android:gravity="bottom|end"
            android:padding="@dimen/space_24" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="Business"
            android:text="Business\nTrack"
            android:textSize="@dimen/space_20"
            android:textColor="@color/business"
            android:textStyle="bold"
            android:background="@drawable/track_business"
            tools:ignore="OnClick"
            android:gravity="bottom|end"
            android:padding="@dimen/space_24"/>
        <Button
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="Innovation"
            android:text="Innovation\nTrack"
            android:textSize="@dimen/space_20"
            android:textColor="@color/innovation"
            android:textStyle="bold"
            android:background="@drawable/track_innovation"
            tools:ignore="OnClick"
            android:gravity="bottom|end"
            android:padding="@dimen/space_24"/>
    </LinearLayout>

</LinearLayout>
