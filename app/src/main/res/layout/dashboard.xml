<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="Technology"
            android:text="Technology\nTrack"
            android:background="@drawable/track_technology"
            tools:ignore="OnClick" />
        <Button
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="Innovation"
            android:text="Innovation\nTrack"
            android:background="@drawable/track_innovation"
            tools:ignore="OnClick" />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">
        <Button
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="Business"
            android:text="Business\nTrack"
            android:background="@drawable/track_business"
            tools:ignore="OnClick" />
        <Button
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="Startup"
            android:text="Start-up\nPlanet"
            android:background="@drawable/track_startupplannet"
            tools:ignore="OnClick" />
    </LinearLayout>


